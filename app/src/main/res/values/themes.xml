<?xml version="1.0" encoding="UTF-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="hintTextColor">@color/colorGray</item>
        <item name="submitBackground">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorBlack</item>
        <item name="actionMenuTextColor">@color/colorPrimaryDark</item>
        <item name="textColorAlertDialogListItem">@color/colorPrimaryDark</item>
        <item name="editTextColor">@color/colorPrimaryDark</item>
        <item name="android:navigationBarColor">@color/colorWhite</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">false</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/colorPrimary</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">false</item>
        <item name="android:textColorLink">@color/colorPrimaryDark</item>
        <item name="snackbarStyle">@style/MySnackBarStyle</item>
        <item name="android:windowContentTransitions" tools:targetApi="lollipop">true</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="listPreferredItemHeightSmall">64dp</item>
    </style>

    <!-- Base application theme. -->
    <style name="ScrollAppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorBlack</item>
        <item name="actionMenuTextColor">@color/colorPrimaryDark</item>
        <item name="textColorAlertDialogListItem">@color/colorPrimaryDark</item>
        <item name="editTextColor">@color/colorPrimaryDark</item>
        <item name="android:navigationBarColor">@color/colorWhite</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/colorPrimary</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">false</item>
        <item name="android:textColorLink">@color/colorPrimaryDark</item>
        <item name="snackbarStyle">@style/MySnackBarStyle</item>
        <item name="android:windowContentTransitions" tools:targetApi="lollipop">true</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="listPreferredItemHeightSmall">64dp</item>
    </style>

    <style name="CustomAppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="hintTextColor">@color/colorGray</item>
        <item name="submitBackground">@color/colorPrimary</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorBlack</item>
        <item name="actionMenuTextColor">@color/colorPrimaryDark</item>
        <item name="textColorAlertDialogListItem">@color/colorPrimaryDark</item>
        <item name="editTextColor">@color/colorPrimaryDark</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>
        <item name="android:navigationBarColor">@color/colorWhite</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/colorPrimary</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">false</item>
        <item name="android:textColorLink">@color/colorPrimaryDark</item>
        <item name="snackbarStyle">@style/MySnackBarStyle</item>

        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowContentTransitions" tools:targetApi="lollipop">true</item>
        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>
    </style>

    <style name="DetailAppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="hintTextColor">@color/colorGray</item>
        <item name="submitBackground">@color/colorPrimary</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorBlack</item>
        <item name="actionMenuTextColor">@color/colorPrimaryDark</item>
        <item name="textColorAlertDialogListItem">@color/colorPrimaryDark</item>
        <item name="editTextColor">@color/colorPrimaryDark</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>
        <item name="android:navigationBarColor">@color/colorWhite</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/colorPrimary</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">false</item>
        <item name="android:textColorLink">@color/colorPrimaryDark</item>
        <item name="snackbarStyle">@style/MySnackBarStyle</item>
    </style>

    <style name="TabTextViewStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textAllCaps">false</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="tabIndicatorColor">@color/colorBlack</item>
    </style>

    <style name="TextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/open_sans_semibold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="MySnackBarStyle" parent="Widget.MaterialComponents.Snackbar">
        <item name="android:fontFamily">@font/open_sans_semibold</item>
        <item name="android:textColorHint">@color/colorWhite</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textColorPrimary">@color/colorWhite</item>
    </style>

    <style name="LongTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        @
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/colorMilky</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
        <item name="android:windowContentTransitions" tools:targetApi="lollipop">true</item>
        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>
    </style>

    <style name="CustomActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/enter_from_right</item>
        <item name="android:activityOpenExitAnimation">@anim/exit_to_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/enter_from_left</item>
        <item name="android:activityCloseExitAnimation">@anim/exit_to_right</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="titleTextColor">@color/colorPrimary</item>
        <item name="fontFamily">@font/open_sans_semibold</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="titleTextColor">@color/colorPrimary</item>
        <item name="fontFamily">@font/open_sans_semibold</item>
    </style>

    <style name="TextAppearance.App.Tooltip" parent="TextAppearance.MaterialComponents.Tooltip">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="fontFamily">@font/open_sans_semibold</item>
        <item name="android:fontFamily">@font/open_sans_semibold</item>
    </style>

    <style name="ToolbarTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorSecondary">@android:color/black</item>
        <item name="actionMenuTextColor">@android:color/black</item>
    </style>

    <style name="RobotoTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="MenuTitleViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/open_sans_semibold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="MenuSubTitleViewStyle" parent="android:Widget.TextView">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/open_sans_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

</resources>
